<%= form_for(@point) do |f| %>
  <% if @point.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@point.errors.count, "error") %> prohibited this point from being saved:</h2>

      <ul>
      <% @point.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude %>
  </div>

  <div class="tags">
    <h3>tags</h3>

    <% for tag in @point.point_tags %>
    <div id="tag">
      id: <%= tag.id %>
      key: <%= tag.key %>
      value: <%= tag.value %>
      <%= link_to 'Edit', edit_point_tag_path(tag) %> |
    </div>
    <% end %>
    <%= link_to 'New Tag', new_point_tag_path, :point_id => @point.id %>
  </div>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
